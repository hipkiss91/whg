{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
        "noErrorTruncation": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true, // See: https://www.typescriptlang.org/tsconfig#allowSyntheticDefaultImports
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "node",
            "vite/client"
        ],
        "baseUrl": ".",
        "paths": {
            "~": [
                "src"
            ],
            "~/*": [
                "src/*"
            ],
            "~assets/*": [
                "src/assets/*"
            ],
            "~components/*": [
                "src/components/*"
            ],
            "~utils/*": [
                "src/utils/*"
            ],
            "~pages/*": [
                "src/pages/*"
            ],
            "~types/*": [
                "src/types/*"
            ],
            "~layouts/*": [
                "src/layouts/*"
            ]
        }
    },
    "include": [
        "*.d.ts",
        "vite.config.ts",
        "src/**/*.vue",
        "src/**/*.ts",
        "tests/**/*"
    ]
}